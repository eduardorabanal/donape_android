<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.donacion.donar.DonarActivity"
    android:padding="@dimen/activity_margin"
    android:orientation="vertical">
        <TextView
            android:textSize="15sp"
            android:text="Ingresa la cantidad que quieres donar y serÃ¡s contactado para la entrega"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:textSize="20sp"
                android:text="Quiero donar: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/etCantidad"
                android:textSize="20sp"
                android:inputType="number"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvArticulo"
                android:textSize="20sp"
                android:text="cargando..."
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDonar"
            android:layout_marginTop="@dimen/activity_margin"
            style="@style/AppTheme.Button"
            android:text="@string/action_donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>